{
  "name": "kysely-pg-client",
  "version": "0.1.2",
  "author": "Joseph T. Lapp <arachnojoe@gmail.com>",
  "license": "MIT",
  "description": "Non-pooling single-connection Postgres dialect for Kysely",
  "repository": {
    "type": "git",
    "url": "https://github.com/jtlapp/kysely-pg-client"
  },
  "keywords": [
    "kysely",
    "postgres",
    "postgresql",
    "pg",
    "client",
    "connection",
    "dialect",
    "serverless"
  ],
  "main": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "source": "/index.ts",
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "default": "./dist/cjs/index.js"
    }
  },
  "scripts": {
    "clean": "rm -rf node_modules & rm -rf dist & rm -rf test/node/dist & rm -rf test/node/src/temp",
    "format": "prettier --write \"**/*.{js,ts,tsx,md}\"",
    "build": "rm -rdf dist && tsc && npx check-synced-code && tsc -p tsconfig-cjs.json",
    "test": "npm run build && npm run test:build && npm run test:node",
    "test:build": "rm -rdf test/node/dist && npx load-kysely-tests && tsc -p test/node",
    "test:node": "DIALECT=postgres mocha --timeout 15000 'test/node/dist/**/*.test.js'"
  },
  "dependencies": {
    "kysely": "^0.24.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/chai-as-promised": "^7.1.5",
    "@types/chai-subset": "^1.3.3",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.15.11",
    "@types/pg": "^8.6.5",
    "@types/pg-cursor": "^2.7.0",
    "@types/sinon": "^10.0.13",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "chai-subset": "^1.6.0",
    "kysely-test-sync": "0.2.4",
    "mocha": "^10.0.0",
    "pg": "^8.7.3",
    "pg-cursor": "^2.7.3",
    "prettier": "^2.8.8",
    "sinon": "^14.0.0",
    "typescript": "^4.9.5"
  }
}
